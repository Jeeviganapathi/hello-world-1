package com.company;
import java.util.Scanner;

public class Main
{
public static void main(String args[])
{ int i,j,n;
Scanner scan=new Scanner(System.in);
System.out.println("Enter number");
n=scan.nextInt();
for(i=0;i<n;i++)
{
    for(j=0;j<=i;j++)
    {
        System.out.print("*");
    }
    System.out.println(" ");
}
}
}
