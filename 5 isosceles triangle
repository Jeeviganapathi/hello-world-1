package com.company;
import java.util.Scanner;

public class Main
{
public static void main(String args[])
{ int i,j,k=0,rows;
Scanner scan=new Scanner(System.in);
System.out.print("Enter number of rows:");
rows=scan.nextInt();
for(i=1;i<=rows;i++)
{
    for(j=1;j<=(rows-i);j++)
    {
        System.out.print(" ");
    }
    while(k!=(2*i-1))
    {
        System.out.print("*");
        k++;
    }
    k=0;
    System.out.println(" ");
}

}
}
